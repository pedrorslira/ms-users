{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist",
      "declaration": true,
      "declarationMap": false,
      "sourceMap": true,
      "skipLibCheck": true,
      "module": "commonjs",
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "test", "**/*spec.ts"]
  }
  